<Styles
  xmlns="https://github.com/avaloniaui"
  xmlns:controls="using:Meringue.AvaDock.Controls"
  xmlns:viewModels="using:Meringue.AvaDock.ViewModels"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style Selector="controls|ItemTitleBar ToggleButton">
    <Style Selector="^ToggleButton /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="^ToggleButton:checked /template/ ContentPresenter#PART_ContentPresenter">
      <Setter Property="Background" Value="Transparent"/>
    </Style>
  </Style>
</Styles>
