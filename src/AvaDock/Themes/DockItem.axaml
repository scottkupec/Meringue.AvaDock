<Styles
  xmlns="https://github.com/avaloniaui"
  xmlns:controls="using:Meringue.AvaDock.Controls"
  xmlns:viewModels="using:Meringue.AvaDock.ViewModels"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style Selector=":is(controls|DockItem)">
    <Setter Property="Template">
      <ControlTemplate x:DataType="viewModels:DockItemViewModel">
        <Grid>
          <Border BorderBrush="{DynamicResource AvaDockAccentColor}"
                  BorderThickness="1"
                  CornerRadius="1"
                  Margin="1">
            <DockPanel>

              <Border x:Name="PART_TitleBar"
                      Background="{DynamicResource AvaDockAccentColor}"
                      DockPanel.Dock="Top"
                      Padding="1">
                <controls:ItemTitleBar DataContext="{TemplateBinding DataContext}"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Top" />
              </Border>
              <ContentPresenter Content="{TemplateBinding Content}" />
            </DockPanel>
          </Border>
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
